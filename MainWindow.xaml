<Window x:Class="InterfaceDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceDB"
        mc:Ignorable="d"
        Title="Пользовательский интерфейс" WindowStyle="ThreeDBorderWindow" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0">
            <Button Click="ShowPassesList_Click" FontSize="17" Margin="0 0 0 10" Cursor="UpArrow" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">Список пропусков</Button>
            <Button Click="ShowVisitsList_Click" FontSize="17" Margin="0 0 0 10" Width="200" Height="40" Cursor="UpArrow" VerticalAlignment="Center" HorizontalAlignment="Center">Список посещений</Button>
            <Button Click="ShowPassManager_Click" FontSize="17" Margin="0 0 0 10" Width="200" Height="40" Cursor="UpArrow" VerticalAlignment="Center" HorizontalAlignment="Center">Управление пропуском</Button>
        </StackPanel>
    </Grid>
</Window>
